{
  "extends": "@react-native/typescript-config",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@assets/icons": ["../assets/icons"],
      "@app/context": ["app/context"],
      "@app/navigation": ["app/navigation"],
      "@app/hooks": ["app/hooks"],
      "@branding/components": ["presentation/components/branding/components"],
      "@branding/assets": ["presentation/components/branding/assets"],
      "@branding/provider": ["presentation/components/branding/provider"],
      "@branding/styles": ["presentation/components/branding/styles"],
      "@branding/types": ["presentation/components/branding/types/Theme.ts"],
      "@presentation/screens": ["presentation/screens"],
      "@presentation/components": ["presentation/components"],
      "@presentation/hooks": ["presentation/hooks"],
      "@utils": ["utils"]
    },
    "types": [
      "node",
      "react",
      "react-native"
    ]
  }
}
